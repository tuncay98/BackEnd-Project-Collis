@model Collis.Controllers.BaseModels
@{
    ViewBag.Title = "Index";
}

<div id="preloader">
    <div id="loader">
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="lading"></div>
    </div>
</div>

<section class="welcome-section jarallax over-layer-black sec-btm-style">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="welcome-col text-center991">
                    @foreach (var item in Model.hm)
                    {
                        <h1>@item.Title <span>@item.TitlePart2</span></h1>
                    }
                    <h3 class="cd-headline clip">
                        <span class="cd-words-wrapper">

                           @foreach (var item in Model.ht)
                           {
                            <b class= @(item.Id < 2?"is-visible":"")>@item.SliderText</b>
                           }
                        </span>
                    </h3>
                    <ul>
                    @foreach (var item in Model.ss)
                    {
                                                 <li><a target="_blank" href="@item.Facebook"><i class="fa fa-facebook"></i></a></li>
                                                <li><a target="_blank" href="@item.Twitter"><i class="fa fa-twitter"></i></a></li>
                                                <li><a target="_blank" href="@item.Google"><i class="fa fa-google-plus"></i></a></li>
                                                <li><a target="_blank" href="@item.Ink"><i class="fa fa-linkedin"></i></a></li>
                                                <li><a target="_blank" href="@item.Pinteres"><i class="fa fa-pinterest"></i></a></li>
                    }
                    </ul>
                </div>
            </div>
            <div class="col-md-4">
                <div class="welcome-col">
                   @foreach (var item in Model.hm)
                   {
                    <img src="Public/@item.Image" alt="">
                   }
                </div>
            </div>
        </div>
    </div>
</section>

<section class="about-section section-default" id="about">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="about-col col-default">
                    <h2>@Model.about.DesTitle</h2>
                    <p>@Model.about.Desc</p>
                    <button class="btn btn-default simple-default-btn" type="submit">@Model.about.ButtonLeft</button>
                    <button class="btn btn-default simple-default-btn btn-black" type="submit">@Model.about.ButtonRight</button>
                </div>
            </div>
            <div class="col-md-6">
                <div class="about-col col-default">
                    <h2>@Model.about.BarTitle</h2>
                    <h5>@Model.about.BarDesc</h5>
                    <!-- Progress Bar Start -->
                    <div class="progress-box">
                        <h5>@Model.about.Bar1 <span class="color-heading pull-right">@Model.about.Bar1Per%</span></h5>
                        <div class="progress">
                            <div class="progress-bar bg-color-base" role="progressbar" data-width="@Model.about.Bar1Per"></div>
                        </div>
                    </div>
                    <div class="progress-box">
                        <h5>@Model.about.Bar2 <span class="color-heading pull-right">@Model.about.Bar2Per%</span></h5>
                        <div class="progress">
                            <div class="progress-bar bg-color-base" role="progressbar" data-width="@Model.about.Bar2Per"></div>
                        </div>
                    </div>
                    <div class="progress-box">
                        <h5>@Model.about.Bar3 <span class="color-heading pull-right">@Model.about.Bar3Per%</span></h5>
                        <div class="progress">
                            <div class="progress-bar bg-color-base" role="progressbar" data-width="@Model.about.Bar3Per"></div>
                        </div>
                    </div>
                    <div class="progress-box">
                        <h5>@Model.about.Bar4 <span class="color-heading pull-right">@Model.about.Bar4Per%</span></h5>
                        <div class="progress mb-none">
                            <div class="progress-bar bg-color-base" role="progressbar" data-width="@Model.about.Bar4Per"></div>
                        </div>
                    </div>
                    <!-- Progress Bar Start -->
                </div>
            </div>
        </div>
    </div>
</section>

<section class="service-section section-default" id="service">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2">
                <div class="default-title text-center">
                    <h2>@ViewBag.ServiceTitle.Title</h2>
                    <p>@ViewBag.ServiceTitle.Desc</p>
                </div>
            </div>
        </div>
        <div class="row">

          @foreach (var item in Model.services)
          {
            <div class="col-md-4 col-sm-6 col-xs-6 full-wd600">
                <div class="serviceBox wow fadeInUp" data-wow-duration="1s" data-wow-delay="0s">
                    <div class="service-icon">
                        <i class="@item.Photo"></i>
                    </div>
                    <h3 class="title">@item.Title</h3>
                    <p class="description">
                        @item.Desc
                    </p>
                    <span class="number">@item.Number</span>
                </div>
            </div>
          }
        </div>
    </div>
</section>

<section class="counter-sec section-default jarallax over-layer-black">
    <div class="container">
        <div class="row">
           
           @foreach (var item in Model.cou)
           {
            <div class="col-md-3 col-sm-6 col-xs-6 full-wd600">
                <div class="counter-box col-default wow fadeInLeft" data-wow-duration="1s" data-wow-delay="0s">
                    <div class="counter">@item.Number</div>
                    <p>@item.Title</p>
                    <i class="@item.Icon"></i>
                </div>
            </div>
           }
        </div>
    </div>
</section>

<section class="portfolio-section section-default" id="work">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2">
                <div class="default-title text-center">
                    <h2>@ViewBag.ProTitle.Title</h2>
                    <p>@ViewBag.ProTitle.Desc</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="portfolio-col">
                <!-- Filter Nav -->
                <ul class="portfolio-nav">
                   @foreach (var item in Model.fil)
                   {
                    <li data-filter="@item.Num"> @item.Category </li>
                   }

                </ul>
                <!-- Filter Content -->
                <div class="filtr-container">
                   
    @foreach (var item in Model.pro)
    {
        <div class="col-xs-6 col-sm-4 col-md-3 filtr-item" data-category="@item.Category" data-sort="value">
            <div class="portfolio-item">
                <img src="@item.Image" class="img-responsive" alt="portfolio">
                <div class="portfolio-item-info">
                    <div class="item-caption">
                        <ul>
                            <li>
                                <a href="@item.Image" data-lightbox="lightbox" data-title="@item.Title"><i class="fa fa-search-plus" aria-hidden="true"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-link" aria-hidden="true"></i></a>
                            </li>
                        </ul>
                        <h4><a href="#">@item.Title</a></h4>
                    </div>
                </div>
            </div>
        </div>
    }
                </div>
            </div>
        </div>
    </div>
</section>

<section class="testimonial-section jarallax over-layer-black" id="testimonial">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2">
                <div class="default-title text-center">
                    <h2>@ViewBag.TaseTitle.Title</h2>
                    <p>@ViewBag.TaseTitle.Desc</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="testimonial-carousel" data-slick='{"slidesToShow": 2, "slidesToScroll": 1}'>
                   @foreach (var item in Model.testi)
                   {
                    <div class="testimonial-item">
                        <div class="testimonial-item-content">
                            <div class="testimonial-img">
                                <img src="@item.Image" alt="">
                            </div>
                            <p> @item.Text</p>
                            <h4>@item.FullName</h4>
                            <span>@item.Position</span>
                        </div>
                    </div>
                   }

                </div>
            </div>
        </div>
    </div>
</section>

<section class="blog-sec section-default" id="blog">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2">
                <div class="default-title text-center">
                    <h2>@ViewBag.NewsTitle.Title</h2>
                    <p>@ViewBag.NewsTitle.Desc</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="blog-carousel" data-slick='{"slidesToShow": 3, "slidesToScroll": 1}'>
                    
                   @foreach (var item in Model.news)
                   {
                    <div class="blog-slide">
                        <div class="blog-img">
                            <img src="@item.Image" alt="">
                            <a href="blog-details.html" class="read">@item.HoverTitle</a>
                        </div>
                        <div class="blog-content">
                            <span class="blog-author">
                                <a href="#"><img src="@item.AuthorImage" alt=""></a>
                            </span>
                            <h3><a href="blog-details.html">@item.Title</a></h3>
                            <p class="blog-description">@item.Text</p>
                        </div>
                        <ul class="blog-info">
                            <li><i class="fa fa-user-circle"></i><a href="#">@item.Author</a></li>
                            <li><i class="fa fa-calendar"></i><a href="#">@item.Date.Value.ToString("dd.MM.yyyy")</a></li>
                            <li><i class="fa fa-comment"></i><a href="#">5</a></li>
                        </ul>
                    </div>
                   }
                </div>
            </div>
        </div>
    </div>
</section>

<section id="contact" class="contact-sec section-default over-layer-white">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="contact-title">
                    <h2>@ViewBag.Contact.Title</h2>
                </div>
            </div>
            <div class="col-md-4">
                <div class="contact-info-box wow fadeInLeft" data-wow-duration="1s" data-wow-delay="0s">
                    <div class="info-box">
                        <i class="fa fa-map-marker" aria-hidden="true"></i>
                        @ViewBag.Contact.Adress
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="contact-info-box wow fadeInLeft" data-wow-duration="1s" data-wow-delay="0.2s">
                    <div class="info-box">
                        <i class="fa fa-phone" aria-hidden="true"></i>
                        <p>@ViewBag.Contact.Number</p>
                        
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="contact-info-box wow fadeInLeft" data-wow-duration="1s" data-wow-delay="0.4s">
                    <div class="info-box">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                        <p>@ViewBag.Contact.Email</p>
                        
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="col-default">
                    <div class="row">
                        <div id="form-messages"></div>
                        <form id="ajax-contact" method="post" action="http://rajibweb.com/html/collis/php/contact.php">
                            <div class="col-md-6">
                                <input type="text" class="form-control" id="name" name="name" placeholder="Your Name" required>
                            </div>
                            <div class="col-md-6">
                                <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" id="subject" name="subject" placeholder="Subject" required>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" id="numbar" name="subject" placeholder="Phone" required>
                            </div>
                            <div class="col-md-12">
                                <textarea class="form-control textarea-hight-full" id="message" name="message" rows="6" placeholder="Message" required></textarea>
                                <button class="btn btn-default simple-default-btn" type="submit">@ViewBag.Contact.BtnText</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-default">
                    <div id="map" style="width:100%; height:350px;"></div>
                </div>
            </div>
        </div>
    </div>
</section>
